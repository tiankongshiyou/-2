page {
  font-size: 30rpx;
  background: #f3f5f7;
}
/* 商户资料start */
.seller {
  background: #fff;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}

.seller_means {
  height: 100rpx;
  display: flex;
  align-items: center;
  margin: 0 42rpx;
}

.seller_password {
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}

.seller_means text {
  width: 160rpx;
  color: #4d4d4d;
}

.cue_writing {
  color: #b3b3b3;
}

.seller_means input {
  width: 100%;
  color: #b3b3b3;
  margin-left: 26rpx;
}
/* 商户资料end */

/* 商家优惠券start */
.seller_coupon {
  font-size: 26rpx;
  background: #fff;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}

.value_voucher {
  height: 145rpx;
  margin: 0 42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.seller_check {
  display: flex;
  align-items: center;
}

.tacitly_approve {
  width: 44rpx;
  height: 44rpx;
}

.coupon_receive {
  width: 266rpx;
  height: 109rpx;
  margin-left: 42rpx;
}

.coupon_situation {
  display: flex;
  flex-direction: column;
}

.coupon_quantity {
  color: #4d4d4d;  
}

.coupon_number {
  margin-top: 38rpx;
  display: flex;
  justify-content: space-between;
}

.price {
  color: #e62318;
}

.sheets {
  color: #808080;
}

.protocol {
  height: 100rpx;
  margin-left: 42rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
}

.protocol_detail {
  color: #4d4d4d;
  margin-left: 42rpx;
}

.protocol_enter {
  color: #e62318;
}
/* 商家优惠券end */

/* 合计start */
.amount_to {
  width: 100%;
  height: 98rpx;
  font-size: 34rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summation {
  margin-left: 24rpx;
}

.amount_caption {
  color: #4d4d4d;
}

.money {
  color: #e62318;
}

.sumbit button {
  width: 240rpx;
  height: 98rpx;
  color: #fff;
  border-radius: 0;
  background: #ff5d00;
}
/* 合计end */