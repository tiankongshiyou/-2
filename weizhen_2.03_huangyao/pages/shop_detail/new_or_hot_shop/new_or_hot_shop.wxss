
.shops {
  height: 106rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.shops_detail {
  width: 720rpx;
  margin-left: 16rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.shop_img {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.shop_bottom {
  height: 124rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.shop_name {
  width: 692rpx;
  height: 62rpx;
  color: #2b333b;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.shop_coupon {
  width: 702rpx;
  height: 62rpx;
}
.coupon{
  width: 150rpx;
  height: 30rpx;

}
