/* pages/return_success/return_success.wxss */
@import '../return_goods/return_goods.wxss';

page {
  color: #333;
}

.return_success {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top_img {
  width: 100%;
  height: 120rpx;
  position: relative;
  margin-bottom: 16rpx;
}

.top_images {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
}

.top_text {
  width: 100%;
  height: 120rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: absolute;
  top: 0;
  bottom: 0;
}

.viewtext_hang {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.text_hang {
  width: 90%;
  height: 72rpx;
  font-size: 30rpx;
  margin:0 auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order_number{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#fff;
}
.order_details{
  width:90%;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  
}
.danhao_order{
  width:100%;
  height:60rpx;
  display: flex;
  align-items: flex-end;
}
.number{
  color:#7e7e7e;
} 
.top_text{
  font-size: 37rpx;
}
.dizhi_img {
  width: 100%;
  height: 13rpx;
}

.dizhi_details {
  width: 90%;
  height: 55rpx;
  margin: 0 auto 0;
  font-size: 28rpx;
  color: #7e7e7e;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dizhi_details text {
  margin-right: 8rpx;
}

/* 合计 */

.money_yuan, .shop_money {
  width: 100%;
  display: flex;
  justify-content: center;
  background: #fff;
}
.shop_money{
  font-size: 26rpx;
}
.money_text, .post_free {
  width: 90%;
  height: 70rpx;
  
  display: flex;
  justify-content: flex-end;
}
.money_text{
font-size: 30rpx;
}
.money_yuan {
  border-bottom: 1rpx solid #f5f5f5;
}

.money_tex {
  margin-top: 10rpx;
}

.post_free {
  height: 70rpx;
  align-items: center;
}
