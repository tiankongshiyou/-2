<!--确认订单  -->
<view class='container'>
  <view class='section order_confirm'>
    <image src='/test_img/ddqr_top.png' style='width:100%;height:10rpx;'></image>
    <view class='shouhuo'>
      <image src='/test_img/plusaddr.png' style='width:46rpx;height:46rpx;margin-left:200rpx'></image>
      <text style='margin-left:30rpx;font-size:32rpx'>请填写收货地址</text>
      <image src='/test_img/right.png' style='width:40rpx;height:50rpx;margin-left:180rpx;'></image>
    </view>
  </view>
  <!-- 订单 -->
  <view class='order'>
    <view class='order_detail'>
      <view class='order_top'>
        <view>
          <image style='width:32rpx;height:30rpx;margin-right:10rpx' src='/img/dianpu.png'></image>
          <text style='font-size:26rpx;'>店铺名称</text>
        </view>

      </view>
      <view class='order_mid'>
        <image src='' class='order_img'></image>
        <view class='order_dec'>
          <view style='color:#2b333b;margin-top:30rpx;font-size:32rpx; '>神奇神奇</view>

          <view style='font-size:34rpx;color:#e62318'>￥520.00元</view>
        </view>
        <view class='order_right'>
          <view style='font-size:26rpx;color:#71777d'>
            <text style='font-size:22rpx;margin-right:6rpx;'>X</text>
            <text>1</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 优惠券----------------------------------- -->
  <view class='viewtext_hang' style='border-bottom:1rpx solid #f5f5f5'>
    <view class='text_hang'>
      <view class='left'>优惠券</view>
      <view class='right' style='color: #7e7e7e;'>￥-10.00</view>
    </view>
  </view>

  <!-- 邮费---------------------------------- -->
  <view class='viewtext_hang'>
    <view class='text_hang'>
      <view class='left'>配送方式</view>
      <view class='right' style='color: #7e7e7e;font-size:26rpx;'>快递 包邮</view>
    </view>
  </view>

  <view class='order_liuyan'>
    <view class="title">买家留言：</view>
    <textarea class='text' placeholder='请您填写留言'>
    </textarea>
  </view>
  <view class='submit_order'>
    <view style='margin-left:20rpx;color:#2b333b'>合计：
      <text style='color:#ff5d00'>￥520.00</text> 元</view>
    <view class='submit'>提交订单</view>
  </view>
</view>