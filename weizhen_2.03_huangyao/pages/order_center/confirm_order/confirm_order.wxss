.delivery, .shop_name, .goods_detail, .delivery_method, .coupons, .leave_message,.confirm_button {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.delivery {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 2rpx;
}

.shop_name {
  width: 100%;
  height: 72rpx;
  margin-top: 2rpx;
  background-color: #fff;
}

.goods_detail {
  width: 100%;
  height: 210rpx;
  background-color: #f9f9f9;
}
.goods_img{
  width: 150rpx;
  height: 150rpx;
  background-color: #ccc;
  margin-left: 36rpx;
}
.goods_dec{
  width: 474rpx;
  height: 150rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.delivery_method {
  width: 100%;
  height: 84rpx;
  background-color: #fff;
}

.coupons {
  width: 100%;
  height: 150rpx;
  margin-top: 2rpx;
  background-color: #fff;
}

.leave_message {
  width: 100%;
  height: 108rpx;
  margin-top: 2rpx;
  background-color: #fff;
}
.confirm_button{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
 