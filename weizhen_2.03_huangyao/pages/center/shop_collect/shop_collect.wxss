/* pages/center/shop_collect/shop_collect.wxss */

.shop_collect {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.collect_view {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-top:1rpx solid #f5f5f5;
  box-shadow: 2rpx 0 10rpx #ccc;
}

.collect_input {
  width: 92%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.collect_input input {
  width: 579rpx;
  height:60rpx;
  background: #e6e6e6;
  border-radius: 32rpx;
  padding-left: 40rpx;
  color: #4d4d4d;
}

.collect_input text {
  color: #ff5d00;
}

.collect_bm {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.collect_botn {
  width: 100%;
  display: flex;
  justify-content: center;
  background: #fff;
}

.collect_shop {
  width: 88%;
  height: 108rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.collect_img {
  width: 86rpx;
  height: 76rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.collect_img image {
  width: 100%;
  height: 100%;
  background: #ff5d00;
}

.collect_botntxt {
  width: 83%;
  color: #4d4d4d;
  font-size: 30rpx;
}
.collect_shop{
  width:100%;
  height: 1000rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #4d4d4d;
}
