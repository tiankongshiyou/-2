/* pages/online_chat/online_chat.wxss */

page {
  background-color: #f5f5f5;
}

.online_chat {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  
}

.chat_kuang {
  width: 100%;
  height: 350rpx;
  background-color: #fff;
  margin-top: 16rpx;
  /* box-shadow: 0 2rpx 10rpx #ccc; */
}

textarea {
  width: 95%;
  height: 300rpx;
  color: #2b333b;
  font-size: 32rpx;
  background-color: #fff;
  margin: 0 auto 0;
  padding-top: 10rpx;
}

.chat_text {
  width:100%;
  color: #d9dde1;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 600rpx;
  
}

.btn {
  width: 90%;
  height: 80rpx;
  background-color: #ff5d00;
  border-radius: 16rpx;
  position: absolute;
  top: 430rpx;
  left: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
