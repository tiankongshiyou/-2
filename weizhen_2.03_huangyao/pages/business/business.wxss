  margin-top: 8rpx;
  width: 690rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.active_left, .active_right {
  width: 330rpx;
  height: 200rpx;
  background-color: #ccc;
  margin-top: 16rpx;
  border-radius: 20rpx;
}

.on_one .active_bottom, .on_one .active_top {
  animation: active_area 0.8s;
}

@keyframes active_area {
  from {
    transform: scale(0.5) rotateY(45deg);
    opacity: 0.6;
  }

  to {
    transform: scale(1) rotateY(0);
    opacity: 1;
  }
}

