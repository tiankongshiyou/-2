---------------  */

.class_choose {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.choose_whole {
  width: 100rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.whole_on {
  width: 0;
  transition: all 0.3s;
}

.active_class {
  color: #ff5d00;
  border-bottom:1rpx solid #ff5d00;
}

.choose_left, .choose_right {
  height: 80rpx;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.4s;
  position: relative;
}

.choose_right {
  width: 90rpx;
  color: #fff;
  position: relative;
}

.choose_left {
  width: 560rpx;
  white-space: nowrap;
}

.left_on {
  width: 0rpx;
}

.scroll_item_detail {
  width: 120rpx;
  height: 76rpx;
  background-color: #fff;
  display: inline-block;
  margin: 2rpx 2rpx;
  padding: 0 10rpx;
}

/* 动画线 */

.line {
  position: absolute;
  width: 60rpx;
  height: 8rpx;
  background-color: #000;
  border-radius: 10rpx;
  transition: all 0.6s;
}

.line.a, .line.b, .line.c {
  left: 50%;
  margin-left: -30rpx;
}

.a {
  top: 20rpx;
}

.b {
  top: 36rpx;
}

.c {
  top: 52rpx;
}

/* 线条动画 */

.onA {
  transform: rotate(225deg);
  top: 36rpx;
  left: 50%;
  margin-left: -30rpx;
}

.onB {
  opacity: 0;
  transition: none;
}

.onC {
  transform: rotate(495deg);
  top: 36rpx;
  left: 50%;
  margin-left: -30rpx;
}

/* 所有列表 */

.whole_class {
  width: 100%;
  background-color: #fff;
  position: absolute;
  top: 160rpx;
  left: 100%;
  transition: all 0.6s ease-out;
  z-index: 6;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.whole_class_item {
  width: 33.3%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
