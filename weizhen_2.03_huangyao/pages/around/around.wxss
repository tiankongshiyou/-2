map {
  width: 100%;
  height: 100vh;
  position: absolute;
  bottom: 0;
  left: 0;
}

.center {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  margin-top: -100rpx;
  left: 50%;
  margin-left: -50rpx;
}

.position {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 130rpx;
  left: 20rpx;
}

.reload {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
}
.goto_search{
  width: 96%;
  height: 80rpx;
  margin-left: 16rpx;
  margin-top: 16rpx;
}
.search{
  width: 720rpx;
  height: 60rpx;
  margin-top: 10rpx;
  background-color: #f3f5f7;
  border-radius: 30rpx;
  box-shadow: 0 3rpx 3rpx 0 #ccc; 
  display: flex;
  flex-direction: row;
  align-items: center;
}

