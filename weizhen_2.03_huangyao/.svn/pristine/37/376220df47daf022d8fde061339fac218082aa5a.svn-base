.shop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.shop_img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
/* 店铺收钱start */
.collect_money {
  width: 702rpx;
  height: 777rpx;
  z-index: 22;
  background: #fff;
  margin-top: 16rpx;
  border-radius: 8rpx;
}

.shop_money {
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.shop_money image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 42rpx;
}

.shop_money text {
  color: #4d4d4d;
  font-size: 34rpx;
  margin-left: 23rpx;
}

.scanning {
  color: #4d4d4d;
  font-size: 30rpx;
  margin-top: 42rpx;
  display: flex;
  justify-content: center;
}

.dimension_code {
  margin-top: 42rpx;
  display: flex;
  justify-content: center;
}

.dimension_code image {
  width: 433rpx;
  height: 433rpx;
}

.baseon {
  color: #808080;
  font-size: 26rpx;
  margin-top: 42rpx;
  display: flex;
  justify-content: center;
}
/* 店铺收钱end */