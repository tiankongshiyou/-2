/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

page, .container, .main {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.main {
  position: relative;
  background-color: #f5f5f5;
}

.section {
  width: 100%;
  height: 400rpx;
  background-color: #ccc;
  margin-bottom: 16rpx;
  position: relative;
}

/*商家-------
---------------
---------------
---------------  */

.shops_detail {
  height: 424rpx;
}

.shop_img {
  width: 100%;
  height: 300rpx;
  background-color: #ccc;
}

.shop_bottom {
  height: 124rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop_name {
  width: 692rpx;
  height: 62rpx;
  color: #2b333b;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.shop_coupon {
  width: 702rpx;
  height: 62rpx;
}

.coupon {
  margin-left: 10rpx;
}

/*搜索栏-------
---------------
---------------
---------------  */

.box {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background-color: #fff;
}

.header {
  height: 152rpx;
  margin-bottom: 0;
}

.search_bar {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.city {
  width: 154rpx;
  height: 60rpx;
  background-color: #f3f5f7;
  margin-left: 10rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.search_input {
  width: 564rpx;
  height: 60rpx;
  background-color: #f3f5f7;
  margin-left: 10rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

