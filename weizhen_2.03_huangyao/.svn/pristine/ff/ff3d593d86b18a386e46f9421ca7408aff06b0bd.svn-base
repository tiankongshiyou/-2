.container{
  background-color: #f3f5f7;
}

.container_background{
  background-color: #fff;
  width: 100%;
  margin-top: 20rpx;
}

.impress_all {
  width: 702rpx;
  height: 460rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
  margin-left: 24rpx;
}

.impress-left {
  width: 140rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.impress-right {
  width: 560rpx;
  height: 100%;
  background-color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin-top: 20rpx;
}

.nick_name {
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  line-height: 70rpx;
  font-size: 40rpx;
}

.comment_time {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  line-height: 60rpx;
  font-size: 34rpx;
}

.comment_dec {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
}

.comment_img {
  width: 100%;
  height: 164rpx;
  background-color: #fff;
}

.img_details {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img {
  width: 30%;
  height: 90%;
  background-color: #ccc;
  margin-right: 20rpx;
}