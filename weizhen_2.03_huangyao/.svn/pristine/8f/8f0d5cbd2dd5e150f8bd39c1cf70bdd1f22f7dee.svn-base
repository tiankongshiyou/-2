page{
  color:#2b333b;
}
.order {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 16rpx;
}

.order_detail {
  width: 700rpx;
  background-color: #fff;
}

.order_top, .order_mid, .order_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order_top {
  width: 100%;
  height: 90rpx;
  color: #7e7e7e;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.order_mid {
  width: 100%;
  height: 190rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.order_img {
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
  border-radius: 20rpx;
}

.order_dec {
  width: 400rpx;
  height: 150rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 30rpx;
}

.order_right {
  width: 40rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-left: 80rpx;
}

.order_bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.order_bottom{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#2b333b;
}
.order_time{
  width: 100%;
  height: 340rpx;
  background-color: #fff;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  
  justify-content: space-around;
}

.order_rmk{
  width: 100%;
  background-color: #fff;
}
.order_rmk view{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.order_rmk view text{
  margin-left: 20rpx;
  font-size: 30rpx;
  
}
.order_rmk view input{
  font-size: 30rpx;
  color: #7e7e7e;
}
.order_time view{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.order_text{
  color:#7e7e7e;
}
.title{
  width: 160rpx;
  height: 90%;
   /* background-color: #ccc;  */
  margin-left: 20rpx;
  text-align: left;
  font-size: 30rpx;
  color: #2b333b;
}
.text{
  width: 540rpx;
  height: 90%;
  /* background-color: #ddd; */
  font-size: 30rpx;
  color: #2b333b;
}
.submit_order{
  position: fixed;
  bottom: 16rpx;
  left: 16rpx;
  width: 718rpx;
  height: 106rpx;
  color: #fff;
  text-align: center;
  line-height: 106rpx;
  border-radius: 10rpx;
  background-color: #ff5d00;
}