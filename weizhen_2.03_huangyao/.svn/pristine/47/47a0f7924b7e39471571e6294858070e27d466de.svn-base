/* pages/micro_powder/micro_powder.wxss */
.micro_powder{
  width:100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.letter{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height:50rpx;
  font-size: 30rpx;
}
.letter text{
  width:90%;
  color:#808080;
}
.user_powder{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  font-size: 30rpx;
  border-bottom:1rpx solid #f5f5f5;
}
.user_sort{
  width:90%;
  height:106rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user_img{
  width:74rpx;
  height:74rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.micro_btn{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  background: #ff5d00;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}